<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.HomeController">
   <top>
      <fx:include fx:id="headerView" source="Header.fxml" />
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="900.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="60.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#newSale" prefHeight="86.0" prefWidth="305.0" text="Start Sale">
                     <font>
                        <Font size="27.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#toReturn" prefHeight="86.0" prefWidth="305.0" text="Return">
                     <font>
                        <Font size="27.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="60.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#toInventory" prefHeight="86.0" prefWidth="305.0" text="Inventory">
                     <font>
                        <Font size="27.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#toReports" prefHeight="86.0" prefWidth="305.0" text="Reports">
                     <font>
                        <Font size="27.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
